{
	"compilerOptions": {
		"target": "es5",
		"paths": {
			"@/*": ["*"]
		},
		"jsx": "react",
		"allowJs": true,
		"baseUrl": "src",
		"rootDir": "src",
		"module": "ESNext",
		"removeComments": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"forceConsistentCasingInFileNames": true,
	},
	"include": ["src"],
}
